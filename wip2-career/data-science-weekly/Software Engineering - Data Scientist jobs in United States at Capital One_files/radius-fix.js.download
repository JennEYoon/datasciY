function hideRadius() {
    $(".RadiusSearchContainer").attr('style', 'display: none !important');
    $("#lblASCountry, #ddlASCountry, #lblASState, #ddlASState, #lblASCity, #ddlASCity, #lblASLocations, #ddlASLocations").show();
}
function showRadius() {
    $(".RadiusSearchContainer").attr('style', 'display: block !important');
    $("#lblASCountry, #ddlASCountry, #lblASState, #ddlASState, #lblASCity, #ddlASCity, #lblASLocations, #ddlASLocations").hide();
}
function dieHard(selector, events, handler) {
    if ($().die) $(selector).die(events, handler);
    else $(document).off(events, selector, handler);
}  

$(document).ready(function () {
    dieHard('#rdBtnLocation', 'click');
    dieHard('#rdBtnRadius', 'click');

    if ($().live) {
        $('#rdBtnLocation').live('click', hideRadius);
        $('#rdBtnRadius').live('click', showRadius);
    }
    else {
        $(document).on('click', '#rdBtnLocation', hideRadius);
        $(document).on('click', '#rdBtnRadius', showRadius);
    }   
    //HACK to prevent auto-open of radius search

    switch($('body').attr('id')) {
        case "home":
            $('#search-toggle').parent('div').addClass('advanced');
            if ($("#rdBtnRadius").is(":checked")) {
                $('.RadiusSearchContainer').attr('style', 'display: block !important');
            }
            else {
                $('.RadiusSearchContainer').attr('style', 'display: none !important');
            }
            break;
        default:
            $('.RadiusSearchContainer').attr('style', 'display: none !important');
            break;
    }

    //advanced search toggle
    $('#search-toggle').unbind().click(function () {
        if ($(this).parent('div').hasClass('advanced')) {
            $(this).parent('div').removeClass('advanced');
            $('.RadiusSearchContainer, .RadiusSearch.location-field').attr('style', 'display: none !important');
        }
        else {
            $(this).parent('div').addClass('advanced');
            if ($("#rdBtnRadius").is(":checked")) {
                $('.RadiusSearchContainer').attr('style', 'display: block !important');
            }
            $('.RadiusSearch.location-field').attr('style', 'display: block !important');
            $("#txtASKeywords").focus();
        }
        return false;
    });
});

